<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_quan_li_muon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ptithcm.com.qltb.activity.PhieuMuonActivity">

    <TextView
        android:text="Tên Nhân Viên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txtNV_CTPM" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Mã Người Mượn"
        android:textSize="20dp"/>

    <TextView
        android:text="Tên Người Mượn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingTop="5dp"
        android:id="@+id/textView3"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phòng"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời Gian Mượn"
        android:textSize="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:text="Danh Sách Thiết Bị Cho Mượn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textView2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_add_circle_black_24dp"
            android:id="@+id/imgThemPM"
            android:layout_weight="0.16" />
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:id="@+id/lvTB_PM" />

    <Button
        android:text="Hoàn Tất"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/btnHoanTat" />

</LinearLayout>
